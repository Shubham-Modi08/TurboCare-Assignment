<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SplashScreen">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/t_c"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Providing a smart digital ecosystem to your Private Automobile Workshops with the power of AI.\n
A one-stop total vehicle maintenance solution for your vehicle right in your hand!"
        android:fontFamily="@font/poppins_bold"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:textSize="12sp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />


</RelativeLayout>